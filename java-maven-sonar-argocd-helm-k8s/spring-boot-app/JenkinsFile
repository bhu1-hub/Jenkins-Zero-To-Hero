pipeline {
  agent {
    docker {
       image 'tata227/maven-docker-cli:3.9.6-eclipse-temurin-17'
      args '--user root -v /var/run/docker.sock:/var/run/docker.sock'
    }
  }

  environment {
    // SonarCloud info (replace with your actual values)
    SONAR_ORG          = 'bhu1-hub'
    SONAR_PROJECT_KEY  = 'bhu1-hub_Jenkins-Zero-To-Hero'
  }

  stages {
    stage('Checkout') {
  steps {
    git branch: 'main', url: 'https://github.com/bhu1-hub/Jenkins-Zero-To-Hero.git'
  }
}

    stage('Build and Test') {
      steps {
        sh 'ls -ltr'
        sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && mvn clean package'
        sh 'java -version'

      }
    }

    stage('Static Code Analysis (SonarCloud)') {
      steps {
        // "sonarcloud" must match the name in Manage Jenkins -> Configure System -> SonarQube servers
        withSonarQubeEnv('sonarcloud') {
          sh """
            cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && \
            mvn sonar:sonar \
              -Dsonar.projectKey=${SONAR_PROJECT_KEY} \
              -Dsonar.organization=${SONAR_ORG} \
              -Dsonar.host.url=https://sonarcloud.io
          """
        }
      }
    }

    stage('Quality Gate') {
  steps {
    waitForQualityGate abortPipeline: true
  }
}

    stage('Build and Push Docker Image') {
      environment {
        DOCKER_IMAGE = "tata227/spring-boot-app:${BUILD_NUMBER}"
        REGISTRY_CREDENTIALS = credentials('docker-cred')
      }
      steps {
        script {
          sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && docker build -t ${DOCKER_IMAGE} .'
          def dockerImage = docker.image("${DOCKER_IMAGE}")
          docker.withRegistry('https://index.docker.io/v1/', "docker-cred") {
            dockerImage.push()
          }
        }
      }
    }

    stage('Update Deployment File') {
      environment {
        GIT_REPO_NAME = "Jenkins-Zero-To-Hero"
        GIT_USER_NAME = "bhu1-hub"
      }
      steps {
        withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
          sh '''
            git config user.email "tatahakunama826@gmail.com"
            git config user.name "tatahakunama826"

            BUILD_NUMBER=${BUILD_NUMBER}
            sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml
            git add java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml
            git commit -m "Update deployment image to version ${BUILD_NUMBER}"
            git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
          '''
        }
      }
    }
  }
}
